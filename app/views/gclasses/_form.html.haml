= form_for @gclass do |f|
  -if @gclass.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gclass.errors.count, "error")} prohibited this gclass from being saved:"
      %ul
        - @gclass.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :gclass
    = f.text_field :gclass
  .actions
    = f.submit 'Save'
