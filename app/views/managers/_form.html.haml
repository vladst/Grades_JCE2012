= form_for @manager do |f|
  -if @manager.errors.any?
    #error_explanation
      %h2= "#{pluralize(@manager.errors.count, "error")} prohibited this manager from being saved:"
      %ul
        - @manager.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :manager_id
    = f.number_field :manager_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :deadline
    = f.datetime_select :deadline
  .field
    = f.label :group
    = f.number_field :group
  .actions
    = f.submit 'Save'
