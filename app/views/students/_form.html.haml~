    = f.text_field :name
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :gclass
    = f.text_field :gclass
  .field
    = f.label :grade
    = f.number_field :grade
  .field
    = f.label :note
    = f.text_field :note
