= form_for @student do |f|
  -if @student.errors.any?
    #error_explanation
      %h2= "#{pluralize(@student.errors.count, "error")} prohibited this student from being saved:"
      %ul
        - @student.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :student_id
    = f.number_field :student_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :gclass
    = f.text_field :gclass
  .field
    = f.label :grade
    = f.number_field :grade
  .field
    = f.label :note
    = f.text_field :note
  .actions
    = f.submit 'Save'
    
= form_for @student_s do |f|
