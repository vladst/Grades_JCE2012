.page-header
  %h1=t '.title', :default => "List of subjects"

%table.table.table-striped
  %thead
    %tr
      %th Subject
      %th

  %tbody
  - @subjects.each do |subject|
    %tr 
      -#%td= link_to subject.subject, subject
      %td=subject.subject
      %td
        = link_to 'Edit name', edit_subject_path(subject), :class=>'btn btn-mini btn-primary'
        = link_to 'Destroy', subject, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger'

%br

= link_to 'New Subject', new_subject_path, :class => 'btn btn-mini'
