%h1 New teacher
=@teacher.group
= form_for @teacher do |f|
  -if @teacher.errors.any?
    #error_explanation
      %h2= "#{pluralize(@teacher.errors.count, "error")} prohibited this teacher from being saved:"
      %ul
        - @teacher.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :teacher_id
    = f.number_field :teacher_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    =f.select(:subject, @possible_subjects)
    -#= f.text_field :subject
  .field
    =f.select(:gclass, @possible_classes)
    -#= f.text_field :gclass
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.hidden_field :group
  .actions
    = f.submit 'Save'

= link_to 'Back', teachers_path
